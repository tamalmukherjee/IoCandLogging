<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace" internalLogFile="c:\temp\nlog-internal.log">

  <extensions>
    <!--<add assembly="NLog.Extensions.AzureTableStorage" />-->
    <add assembly="WebRole1" />
  </extensions>

  <targets>
    <target xsi:type="AzureTableStorage"
              name="nlogazure"
              ConnectionStringKey="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString"
              TableName="AppErrorTable"
              PartitionKeyPrefix=""
              PartitionKeyPrefixKey=""
              PartitionKeyPrefixDateFormat="yyyyMMddHHmmss"
              LogTimestampFormatString="dd-MMM-yyyy HH:mm:ss.ffff"
              layout ="{message}" />

    <target xsi:type="EventLog"
        name="eventlog"
        layout="${message}"
        machineName="."
        source="Frame"
        log="Application" />

    <target name="file" type="File" fileName="c:/temp/log.txt" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="nlogazure" />
  </rules>
</nlog>